<a><h1>Add book</h1></a>
<%= form_tag :action => 'create'  do %>
<p><label for="book_name" >Name </label>
<%= text_field 'book', 'book_name',:required => true  %></p>
<p><label for="book_author">Author</label>
<%= text_field 'book', 'author',:required => true %></p>
<p><label for="book_publisher">Publisher</label>
	<%= text_field 'book', 'publisher' ,:required => true %></p>
<p><label for="book_stack">Stack</label>
<%= select_tag "book[stack]", "<option>1</option><option>2</option><option>3</option><option>4</option>".html_safe ,:required => true%> </p>
<%= submit_tag "Create" %>
<% end  %>
